{
    "name": "buddylms/thesampleplugincore",
    "description": "The Sample Plugin Core",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4",
        "freemius/wordpress-sdk": "^2.11"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "lint": "phpcs",
        "fix": "phpcbf",
        "test": "phpunit"
    },
    "autoload": {
        "classmap": [
            "includes/classes/",
            "includes/traits/"
        ],
        "files": [
            "includes/helpers/custom-functions.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
